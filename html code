<body>

  <div class="container">
    <h2>üîê Password Strength Checker</h2>
    
    <div class="input-group">
      <input type="password" id="password" placeholder="Enter your password" oninput="checkPasswordStrength()" />
      <span class="toggle-visibility" onclick="toggleVisibility()">üëÅÔ∏è</span>
    </div>

    <div class="progress-bar">
      <div id="progress" class="progress-fill"></div>
    </div>

    <div id="feedback"></div>
  </div>

  <script>
    function toggleVisibility() {
      const input = document.getElementById("password");
      input.type = input.type === "password" ? "text" : "password";
    }

    function checkPasswordStrength() {
      const password = document.getElementById("password").value;
      let score = 0;
      let feedback = [];

      if (password.length >= 8) score++; else feedback.push("‚ùå At least 8 characters");
      if (/[A-Z]/.test(password)) score++; else feedback.push("‚ùå At least one uppercase letter");
      if (/[a-z]/.test(password)) score++; else feedback.push("‚ùå At least one lowercase letter");
      if (/[0-9]/.test(password)) score++; else feedback.push("‚ùå At least one number");
      if (/[!@#$%^&*(),.?\":{}|<>]/.test(password)) score++; else feedback.push("‚ùå At least one special character");

      const feedbackDiv = document.getElementById("feedback");
      const progress = document.getElementById("progress");

      progress.className = `progress-fill score-${score}`;

      if (score === 5) {
        feedbackDiv.innerHTML = `<span class="strong">‚úÖ Strong password!</span>`;
      } else {
        feedbackDiv.innerHTML = feedback.join("<br>") + `<br><br><strong>Score: ${score}/5</strong>`;
      }
    }
  </script>

</body>
